/* pages/project/shopCart/shopCart.wxss */
.cart-item{
  display:flex;
  align-items:center;
 margin-top:30rpx;
}

.cart-box{
  margin:0 20rpx;
 font-size:14px;
}


.cart-img{
 width:200rpx;
 height:200rpx;
 border-radius:12rpx;

}

.cart-number{
  display:flex;
  flex-direction:column;
  margin-left:20rpx; 
}
.cart-number2{
  margin-top:20rpx; 
 width:420rpx; 

}

.cart-price{
  color:red;

}

.carts-img{
  height:45rpx;
  width:45rpx;
  float:right;
}


/*数量按钮组*/
.number-group{
display:table;
table-layout:fixed;
width:200rpx;
text-align:center;
border-radius:6px;
overflow:hidden;
border:1px solid #bbb;
float:right;
 
}

.number-cell{
display:table-cell;
line-height:1.8;
border-radius:0;
}

button::after{
 border-bottom:none;
 border-top:none;
 border-radius:0;
}

/*去结算*/

.cart-settle{
 position:fixed;
 bottom:0rpx; 
 height:140rpx;
 width:750rpx;
 border:1rpx solid #ccc;
 display:flex;
 align-items:center;
 justify-content:space-between;
 background:#fff;
}

.cart-all{
  margin-left:20rpx;
  
}

.cart-all text{
  margin-left:40rpx;
  
}


.settle{
  width:200rpx;
  height:140rpx;
  background-color:#F20657;
  text-align:center;
  line-height:140rpx;
  color:#fff;
}


.noCart{
width: 50%;
text-align: center;
margin: 200rpx auto;
color: red;
}