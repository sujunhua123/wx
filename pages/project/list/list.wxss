/* pages/project/list/list.wxss */
page{
background:#F9F9F9;


}

.content{
  height:600px;

}
.LeftList{
  color:red;
  font-weight:bold;
  border-right:none;
  
}

.pb{
 padding-bottom:200px;

}


.Pink_search{
  display:flex;
  background:#FA6795;
  justify-content:center;
}

.Pink_search input{
  width:550rpx;
  border:1rpx solid #fff;
  background:#fff;
  border-radius:6rpx;
  font-size:14px;
  margin:10rpx 30rpx;
  
}

/*前面箭头*/
.Arrowhead{
  display:flex;
  justify-content: space-between;
  align-items:center;
}
.Arrowhead::before{
  content:"";
  width:24rpx;
  height:24rpx;
  border-right:2px solid #fff;
  border-top:2px solid #fff;
  transform: rotate(225deg);
}

/*商品分类左边*/
.List_size{
  display:flex;
  
}

.List-cell1{
  display:flex;
  flex-direction:column;
  text-align:center;
  margin-top:30rpx;
}

.List-item1{
  width:140rpx;
  border-bottom:1rpx solid #ccc;
  border-right:1rpx solid #ccc;
  font-size:16px;
  padding:40rpx;

}

/*商品分类右边*/
.List-cell2{
  display:flex;
  flex-direction:column;
  margin-left:20rpx;
}

.List-cell2 image{
   height:200rpx;
}

.List-images{
  display:flex;
  flex-wrap:wrap; 


}


.List-images .List-img:nth-child(2){
  margin-left:14rpx;  
 
}
.List-images .List-img:nth-child(3n){
  margin-left:14rpx;  
}
.List-images .List-img:nth-child(3n+2){
  margin-left:14rpx;  
  
}




.List-img{
  width:150rpx;
  height:180rpx;
  border:1rpx solid #ccc;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  font-size:14px;
}

.List-img image{
  width:130rpx;
  height:130rpx;

}

.List-item2{
  margin:30rpx 0;
  font-size:16px;

}

.mt{
  margin-top:10rpx;

}  