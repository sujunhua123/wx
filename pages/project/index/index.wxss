/* pages/project/index/index.wxss */

.slider swiper,
.slider image{
  width:100%;
  height:350rpx;
}


/*珠宝导航栏8个*/

.index-nav{
  display:flex;
  flex-wrap:wrap;

}

 .index-nav .nav-item{
  height:200rpx;
 display:flex;
 flex-direction:column;
 justify-content:center;
 align-items:center;
 width:25%;
 font-size:15px;
}

.nav-item image{
   width:80rpx;
   height:80rpx;
   margin-bottom:24rpx;
}


/*下面图片 width*/
.image image{
 width:100%;
 height:350rpx;
}


.Information{
  height:80rpx;
  background:#EEEEEE;
}

.Information .font_size{
   font-size:16px;
   margin-left:20rpx;
}

/*资讯容器样式*/
.Info1{
 display:flex;
 
}
.Info1-item{
  display:flex;
  flex-direction:column;
  justify-content:center;
  margin-left:30rpx;
  margin-top:30rpx;
}

.Info1-item image{
   border:4rpx solid #A7A7A7;
   width:320rpx;
   height:300rpx;
}

.Info1-item text{
   border:4rpx solid #A7A7A7;
   border-top:none;
   font-size:15px;
   width:320rpx;
   text-align:center; 

}

.Info2{
