/* pages/project/PersonalCenter/Center.wxss */
.avatar{
  height:300rpx;
  background:#F49E13;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column; 
}

.avatar image{
  width:160rpx;
  height:160rpx;
border:1rpx solid rgba(0,0,0,.3);
  border-radius:50%;
  margin-bottom:10rpx;
}

/*我的订单下面那行5个*/
.center-nav{
  height:150rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}

.center-nav .center-item{
   display:flex;
  justify-content: center;
  align-items: center;
   flex-direction: column;
   font-size:13px;
   color:#3A3A3A;
   margin:0 30rpx;
}

.center-nav .center-item image{
  height:40rpx;
  width:40rpx;
  margin-bottom:16rpx; 
}

.center-nav .center-item text{
   width:84rpx;
   text-align:center;
}





.cell{
 border-bottom:1rpx solid #ddd;
 font-size:15px;
}

.cell .All{
  font-size:18px;
  margin-left:290rpx;
  color:#9B9B9B;
}

.cell .cell-item{
  padding:40rpx 30rpx;
  display: flex; 
}
.cell .cell-item image{
   width:50rpx;
   height:50rpx;
   margin-right:18rpx;
 
}





